
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 m-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header">

        <i class="fas fa-users me-1"></i> Lista de Usuarios
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="OpenModal(null);">Crear Nuevo</button>
            </div>
        </div>

        <hr />
        <div class="alert alert-success" role="alert" id="idMsjSucces">
        </div>

        <table id="grid" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">

                <input id="idUsuario" @*type="hidden"*@ value="0" />

                <form>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="idNombre">
                    </div>

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="idApellido">
                    </div>

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Dirección de correo electrónico</label>
                        <input type="email" class="form-control" id="idCorreo" aria-describedby="emailHelp" placeholder="nombre@ejemplo.com">
                    </div>

                    <label for="exampleInputEmail1" class="form-label">Activo</label>
                    <select class="form-select" id="idActivo" aria-label="Default select example">
                        <option value="1">SI</option>
                        <option value="0">NO</option>
                    </select>

                    <div class="alert alert-danger mt-3" role="alert" id="idMsjModalError"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar();">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function OpenLoading() {
            $(".modal-body").LoadingOverlay("show", {
                imageResizeFactor: 2,
                text: "Espere porfavor...",
                size: 14
            });
        }
        function CloseLoading() { $(".modal-body").LoadingOverlay("hide"); }

        $(document).ready(function () {
            $("#idMsjModalError").hide();
            $("#idMsjSucces").hide();
        });

        var filaSeleccionada;
        var gridData;
        gridData = $("#grid").DataTable({
            responsive: true,
            ordering: false,
            "ajax": { // ajax traer todos los valores
                url: '@Url.Action("ListarUsuarios","Home")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Nombre" },
                { "data": "Apellido" },
                { "data": "Correo" },
                {
                    "data": "Activo", "render": function (data) {
                        if (data) {
                            return '<span class="badge bg-success">Si</span>'
                        } else {
                            return '<span class="badge bg-danger">No</span>'
                        }
                    }
                },
                {
                    "defaultContent":
                        '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' ,
                        //'<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searcheable": false,
                    "width": "70px"
                },
                {
                    "defaultContent":
                        '<button type="button" class="btn btn-danger btn-sm btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searcheable": false,
                    "width": "70px"
                }
            ],
            "language": {
                "lengthMenu": "Mostrar " +
                                    '<select>' +
                                    '<option value="10">10</option>' +
                                    '<option value="25">25</option>' +
                                    '<option value="50">50</option>' +
                                    '<option value="100">100</option>' +
                                    '<option value="-1">All</option>' +
                                    '</select>' +
                                " registros por página",
                "zeroRecords": "Nada encontrado - Disculpa",
                "info": "Mostrando la página _PAGE_ de _PAGES_",
                "infoEmpty": "No records available",
                "infoFiltered": "(filtrado de _MAX_ registros totales)",
                "search": "Buscar:",
                "paginate": {
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            }
        });

        $("#grid tbody").on('click', '.btn-eliminar', function () {
            $("#idMsjSucces").hide();
            var seleccionado = $(this).closest("tr");
            var json = gridData.row(seleccionado).data();

            swal({
                title: "¿Está seguro de eliminar el usuario?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarUsuario", "Home")',
                        type: "POST",
                        data: JSON.stringify({ id: json.Id }),
                        dataType: "json",
                        contentType: "application/json; charset-utf-8",
                        success: function (data) {
                            CloseLoading();
                            if (data.resultado) {
                                gridData.row(seleccionado).remove().draw();
                                $("#idMsjSucces").text("El usuario fue eliminado correctamente.");
                                $("#idMsjSucces").show();
                            } else {
                                swal("No se pudo eliminar.", data.mensaje, "error");
                            }
                        },
                        error: function (error) {
                            swal("No se pudo eliminar.", data.mensaje, "error");
                            CloseLoading();
                        },
                        beforeSend: function () {
                            OpenLoading();
                        }
                    });
                });

            console.log(json);
        });

        $("#grid tbody").on('click', '.btn-editar', function () {
            //llamo a la tabla, hace referencia a this porque es su evento
            filaSeleccionada = $(this).closest("tr");
            var json = gridData.row(filaSeleccionada).data();
            OpenModal(json);
        });



        function OpenModal(data) {
            $("#idMsjSucces").hide();
            $("#idMsjModalError").hide();

            if (data == null) { // Nuevo
                $("#idUsuario").val(0);
                $("#idNombre").val("");
                $("#idApellido").val("");
                $("#idCorreo").val("");
                $("#idActivo").val(1);

            } else { // Editar
                $("#idUsuario").val(data.Id);
                $("#idNombre").val(data.Nombre);
                $("#idApellido").val(data.Apellido);
                $("#idCorreo").val(data.Correo);
                $("#idActivo").val(data.Activo == true ? 1 : 0);
            }
            $("#FormModal").modal("show");
        }

        function ValidarCampos() {
            var nombre = $("#idNombre").val();
            var apellido = $("#idApellido").val();
            var correo = $("#idCorreo").val();

            if (nombre == "" || nombre == null || apellido == "" || apellido == null || correo == "" || correo == null) {
                $("#idMsjModalError").text("Los campos asignados se encuentran vacíos. Verifique");
                $("#idMsjModalError").show();
                return false;
            }

            if (nombre == "" || nombre == null) {
                $("#idMsjModalError").text("El nombre ingresado es inválido. Verifique");
                $("#idMsjModalError").show();
                return false;
            }

            if (apellido == "" || apellido == null) {
                $("#idMsjModalError").text("El apellido ingresado es inválido. Verifique");
                $("#idMsjModalError").show();
                return false;
            }

            if (correo == "" || correo == null) {
                $("#idMsjModalError").text("El correo ingresado es inválido. Verifique");
                $("#idMsjModalError").show();
                return false;
            }

            return true;
        }


        function Guardar() {
            if (!ValidarCampos()) { return false; }

            var Usuario = {
                Id: $("#idUsuario").val(),
                Nombre: $("#idNombre").val(),
                Apellido: $("#idApellido").val(),
                Correo: $("#idCorreo").val(),
                Activo: $("#idActivo").val() == 1 ? true : false,
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarUsuario", "Home")',
                type: "POST",
                data: JSON.stringify({ obj: Usuario }),
                dataType: "json",
                contentType: "application/json; charset-utf-8",
                success: function (data) {
                    CloseLoading();
                    if (Usuario.Id == 0) { // NUEVO
                        if (data.resultado != 0) {
                            Usuario.Id = data.resultado;
                            gridData.row.add(Usuario).draw(false);
                            $("#FormModal").modal("hide");
                            $("#idMsjSucces").text(data.mensaje);
                            $("#idMsjSucces").show();
                        } else {
                            $("#idMsjModalError").text(data.mensaje);
                            $("#idMsjModalError").show();
                        }
                    } else { // EDITAR
                        if (data.resultado) {
                            gridData.row(filaSeleccionada).data(Usuario).draw(false);
                            $("#FormModal").modal("hide");
                            $("#idMsjSucces").text(data.mensaje);
                            $("#idMsjSucces").show();
                        } else {
                            $("#idMsjModalError").text(data.mensaje);
                            $("#idMsjModalError").show();
                        }
                    }
                },
                error: function (error) {
                    CloseLoading();
                    $("#idMsjModalError").text("Ocurrió un error.");
                    $("#idMsjModalError").show();
                },
                beforeSend: function () {
                    OpenLoading();
                }
        });


    }







    </script>
}



